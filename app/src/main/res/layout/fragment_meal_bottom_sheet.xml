<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomSheet"
    tools:context=".presentation.bottomsheet.MealBottomSheetFragment">


    <ImageView
        android:id="@+id/imgMealBottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/loDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMealBottom"
        app:layout_constraintTop_toTopOf="@id/imgMealBottom">

        <TextView
            android:id="@+id/txtLocation"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_location"
            tools:text="Location" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_category"
            tools:text="Category"
            android:id="@+id/txtCategory"
            android:drawablePadding="8dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/loDetails"
        app:layout_constraintTop_toBottomOf="@id/loDetails"
        tools:text="Meal Name"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/txtMealName"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_more"
        app:layout_constraintTop_toBottomOf="@id/txtMealName"
        app:layout_constraintStart_toStartOf="@id/loDetails"
        android:layout_marginTop="8dp"
        android:id="@+id/txtReadMore"/>


</androidx.constraintlayout.widget.ConstraintLayout>